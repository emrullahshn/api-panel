{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div class="card bg-light" style="margin-top: 15%">
        <article class="card-body mx-auto" style="max-width: 400px;">
            <h4 class="card-title mt-3 text-center">Hesap Oluştur</h4>

            {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-user"></i> </span>
                </div>
                {{ form_row(form.username) }}
            </div>
            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
                </div>
                {{ form_row(form.email) }}
            </div>

            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                </div>
                {{ form_row(form.plainPassword.first) }}
            </div>

            <div class="form-group input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                </div>
                {{ form_row(form.plainPassword.second) }}
            </div>

            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-block" value="{{ 'registration.submit'|trans }}">
            </div>
            <p class="text-center">Hesabın var mı? <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a></p>
            {{ form_end(form) }}
        </article>
    </div>
</div>