                      <select name="type" id="type" class="form-control">
                        <option value="1">Visa</option>
                        <option value="2">MasterCard</option>
                        <option value="3">Discover</option>
                        <option value="4">Amerikan Express</option>
                      </select>
                    </div>
                  </div>
