{% extends 'base.html.twig' %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('build/login-page.css') }}">
{% endblock %}

{% block bodyCustomClass %}{% spaceless %}
  kt-quick-panel--right kt-demo-panel--right kt-offcanvas-panel--right kt-header--fixed kt-header-mobile--fixed kt-subheader--fixed kt-subheader--enabled kt-subheader--solid kt-aside--enabled kt-aside--fixed kt-page--loading
{% endspaceless %}{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script src="{{ asset('build/js/customs/turkishLowerAndUpper.js') }}" type="text/javascript"></script>
  <script src="{{ asset('build/js/vendors/general/country-selector.js') }}" type="text/javascript"></script>

  <script>
    $( '#country' ).on( 'change', function() {
      if($( this ).val() === 'TR') {
        $.getJSON( "{{ asset('sources/il-bolge.json') }}", function( sonuc ) {
          $.each( sonuc, function( index, value ) {
            var row = "";
            var plaka = value.plaka
            var il = value.il.charAt( 0 ).turkishToUpper() + value.il.turkishToLower().slice( 1 )
            row += '<option data-value="' + plaka + '" value="' + il + '">' + il + '</option>';
            $( "#city" ).append( row );
          } )
        } );

        $( "#city" ).on( "change", function() {
          var plaka = $( this ).find( 'option:selected' ).attr( 'data-value' );

          $( "#town" ).attr( "disabled", false ).html( "<option value=''>Se√ßin..</option>" );
          $.getJSON( "{{ asset('sources/il-ilce.json') }}", function( sonuc ) {
            $.each( sonuc, function( index, value ) {
              var row = "";

              if(value.plaka === +( plaka )) {
                var ilce = value.ilce.charAt( 0 ).turkishToUpper() + value.ilce.turkishToLower().slice( 1 )
                row += '<option value="' + ilce + '">' + ilce + '</option>';
                $( "#town" ).append( row );
              }
            } );
          } );
        } );

        $( "#city" ).trigger( 'change' )
        $( "#city" ).show()
        $( "#town" ).show()
      } else {
        $( "#city" ).hide()
        $( "#town" ).hide()
      }
    } )

    $( '#country' ).trigger( 'change' )
  </script>
{% endblock %}

{% block content %}
  {% if(is_granted('ROLE_USER')) %}
    {{ render(path('homepage')) }}
  {% endif %}
  <div class="kt-grid kt-grid--ver kt-grid--root">
    <div class="kt-grid kt-grid--hor kt-grid--root  kt-login kt-login--v6 kt-login--signin" id="kt_login">
      <div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--desktop kt-grid--ver-desktop kt-grid--hor-tablet-and-mobile">
        <div class="kt-grid__item  kt-grid__item--order-tablet-and-mobile-2  kt-grid kt-grid--hor kt-login__aside">
          <div class="kt-login__wrapper">
            <div class="kt-login__container">
              <div class="kt-login__body">
                <div class="kt-login__logo">
                  <a href="#">
                    <img src="{{ asset('build/images/login/logo.png') }}">
                  </a>
                </div>
                <div class="kt-login__signin">
                  <div class="kt-login__head">
                    <h3 class="kt-login__title">{{ 'loginPage.title'|trans }}</h3>
                  </div>
                  <div class="kt-login__form">
                    {% if error %}
                      <div class="kt-alert kt-alert--outline alert alert-danger alert-dismissible" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close"></button>
                        <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                      </div>
                    {% endif %}
                    <form class="kt-form" action="{{ path("fos_user_security_check") }}"
                          method="post">
                      {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                      {% endif %}
                      <div class="form-group">
                        <input class="form-control" type="text"
                               placeholder="{{ 'loginPage.register.email'|trans }}"
                               name="_username" autocomplete="off">
                      </div>
                      <div class="form-group">
                        <input class="form-control form-control-last" type="password"
                               placeholder="Password" name="_password" autocomplete="off">
                      </div>
                      <div class="kt-login__extra">
                        <label class="kt-checkbox">
                          <input type="checkbox"
                                 name="_remember_me"> {{ 'loginPage.rememberMe'|trans }}
                          <span></span>
                        </label>
                        <a href="javascript:;"
                           id="kt_login_forgot">{{ 'loginPage.forgetPassword.title'|trans }}</a>
                      </div>
                      <div class="kt-login__actions">
                        <button type="submit"
                                class="btn btn-brand btn-pill btn-elevate submit-btn">
                          {{ 'loginPage.signIn'|trans }}
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
                <div class="kt-login__signup">
                  <div class="kt-login__head">
                    <h3 class="kt-login__title">
                      {{ 'loginPage.register.title'|trans }}
                    </h3>
                    <div class="kt-login__desc">
                      {{ 'loginPage.register.desc'|trans }}
                    </div>
                  </div>
                  <div class="kt-login__form">
                    <form class="kt-form" action="{{ path('user_register') }}" method="post">
                      <div class="form-group">
                        <input class="form-control" type="text"
                               placeholder="{{ 'loginPage.register.fullName'|trans }}"
                               name="fullname" autocomplete="off">
                      </div>
                      <div class="form-group">
                        <input class="form-control" type="text"
                               placeholder="{{ 'loginPage.register.email'|trans }}" name="email"
                               autocomplete="off">
                      </div>
                      <div class="form-group">
                        <input class="form-control" type="text"
                               placeholder="{{ 'loginPage.register.address'|trans }}"
                               name="address" autocomplete="off">
                      </div>
                      <div class="form-group">
                        <select
                          class="form-control"
                          id="country"
                          name="country"
                          title="{{ 'loginPage.register.country'|trans }}"
                          value="{{ app.request.locale|upper }}"
                          data-role="country-selector"
                          data-code-mode="alpha2"
                        >
                        </select>
                      </div>
                      <div class="form-group">
                        <select class="form-control custom-select" id="city" name="city"
                                title="{{ 'loginPage.register.city'|trans }}"
                                style="display: none;">
                          <option value="0">{{ 'loginPage.register.city'|trans }}</option>
                        </select>
                      </div>
                      <div class="form-group">
                        <select class="form-control custom-select" id="town" name="town"
                                title="{{ 'loginPage.register.town'|trans }}"
                                style="display: none;">
                          <option value="0">{{ 'loginPage.register.town'|trans }}</option>
                        </select>
                      </div>
                      <div class="form-group">
                        <input class="form-control" type="text"
                               placeholder="{{ 'loginPage.register.phone'|trans }}" name="phone"
                               autocomplete="off">
                      </div>
                      <div class="form-group">
                        <input class="form-control" type="text"
                               placeholder="{{ 'loginPage.register.comName'|trans }}"
                               name="companyName" autocomplete="off">
                      </div>
                      <div class="form-group">
                        <input class="form-control" type="password"
                               placeholder="{{ 'loginPage.register.password'|trans }}"
                               name="password" autocomplete="off">
                      </div>
                      <div class="form-group">
                        <input class="form-control form-control-last" type="password"
                               placeholder="{{ 'loginPage.register.confirmPassword'|trans }}"
                               name="rpassword" autocomplete="off">
                      </div>
                      <div class="kt-login__extra">
                        <label class="kt-checkbox">
                          <input type="checkbox"
                                 name="agree"> {{ 'loginPage.register.terms'|trans|raw }}
                          <span></span>
                        </label>
                      </div>
                      <div class="kt-login__actions">
                        <button id="kt_login_signup_submit" type="submit"
                                class="btn btn-brand btn-pill btn-elevate submit-btn"
                                autocomplete="off">
                          {{ 'loginPage.register.title'|trans }}
                        </button>
                        <button id="kt_login_signup_cancel" type="reset"
                                class="btn btn-outline-brand btn-pill">
                          {{ 'loginPage.register.cancel'|trans }}
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
                <div class="kt-login__forgot">
                  <div class="kt-login__head">
                    <h3 class="kt-login__title">
                      {{ 'loginPage.forgetPassword.title2'|trans }}?
                    </h3>
                    <div class="kt-login__desc">
                      {{ 'loginPage.forgetPassword.desc'|trans }}:
                    </div>
                  </div>
                  <div class="kt-login__form">
                    <form class="kt-form" action="{{ path('fos_user_resetting_send_email') }}"
                          method="post">
                      <div class="form-group">
                        <input class="form-control" type="text"
                               placeholder="{{ 'loginPage.register.email'|trans }}"
                               name="username" required="required" id="kt_email"
                               autocomplete="off">
                      </div>
                      <div class="kt-login__actions">
                        <button type="submit"
                                class="btn btn-brand btn-pill btn-elevate submit-btn">
                          {{ 'loginPage.forgetPassword.reset'|trans }}
                        </button>
                        <button type="reset" class="btn btn-outline-brand btn-pill">
                          {{ 'loginPage.register.cancel'|trans }}
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="kt-grid__item kt-grid__item--fluid kt-grid__item--center kt-grid kt-grid--ver kt-login__content"
             style="background-image: url('{{ asset('build/images/login/bg.jpg') }}');">
          <div class="kt-login__section">
            <div class="kt-login__block">
              <div class="kt-login__logo">
                <img src="{{ asset('build/images/login/giris-logo.png') }}" alt="Hosted Logo">
              </div>
              <h3 class="kt-login__title" style="color: #212529;">
                {{ 'loginPage.splashArt.title'|trans }}
              </h3>
              <div class="kt-login__desc" style="color: #212529;">
                {{ 'loginPage.splashArt.desc'|trans }}
              </div>
              <div class="kt-sign-up__form">
                <button id="kt_login_signup"
                        class="btn btn-outline-brand btn-pill kt-login__account-link">
                  {{ 'loginPage.signUp'|trans }}
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
